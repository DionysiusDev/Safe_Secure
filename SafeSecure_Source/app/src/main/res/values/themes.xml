<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NavigationMenu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customise theme-->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="Theme.NavigationMenu.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NavigationMenu.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.NavigationMenu.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/black</item>
    <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- Customise Safe and Secure theme - used on main and login-->
    <style name="Theme.AppCompat.sss_Theme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorAccent">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">#41A303</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorButtonNormal">@color/black</item>
    </style>
    <!-- Customise Safe and Secure theme - used on buttons-->
    <style name="Theme.AppCompat.Button_Theme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorAccent">@color/green</item>
    </style>

</resources>